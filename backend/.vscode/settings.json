{
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  },
  "github.copilot.advanced": {
    "length": 500,
    "temperature": 0.1
  },
  "files.associations": {
    "*.md": "markdown",
    ".copilot-instructions.md": "markdown"
  },
  "editor.inlineSuggest.enabled": true,
  "editor.suggest.preview": true,
  "workbench.editorAssociations": {
    "*.md": "default"
  }
}
